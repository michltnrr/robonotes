<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Robonotes - Study Hub</title>
    <link rel="icon" href="robonotesnewlogo2.png" type="image/png">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    {{>header}}

    <div class="main-content">
        <h1 id="greeting">Welcome to your study hub</h1>
        <p class="subtitle">Generate summaries, quizzes, and study materials instantly</p>

        <!-- Centered input container -->
        <div class="input-container">
            <div class="input-wrapper">
                <textarea 
                    class="main-input" 
                    id="mainInput"
                    placeholder="Paste a video URL or describe your quiz requirements..."
                    rows="1"
                ></textarea>
                <div class="input-footer">
                    <div class="mode-selector">
                        <button class="mode-btn active" data-mode="video">üìπ Video Summary</button>
                        <button class="mode-btn" data-mode="quiz">üìù Quiz Generator</button>
                    </div>
                    <button class="submit-btn" id="submitBtn">‚Üë</button>
                </div>
            </div>
        </div>

        <!-- Suggestions -->
        <div class="suggestions" id="suggestions">
            <div class="suggestion-card" data-prompt="Summarize this YouTube video: ">
                <div class="suggestion-title">Summarize Video</div>
                <div class="suggestion-desc">Get key points from any educational video</div>
            </div>
            <div class="suggestion-card" data-prompt="Generate a 10-question quiz on ">
                <div class="suggestion-title">Create Quiz</div>
                <div class="suggestion-desc">Multiple choice questions on any topic</div>
            </div>
            <div class="suggestion-card" data-prompt="Generate study notes from: ">
                <div class="suggestion-title">Study Notes</div>
                <div class="suggestion-desc">Organized notes from video content</div>
            </div>
        </div>

        <!-- Output -->
        <div class="output-section" id="outputSection">
            <div class="output-content" id="outputContent" contenteditable="true"></div>
        </div>
    </div>

    {{>footer}}

    <script>
        const input = document.getElementById('mainInput');
        const submitBtn = document.getElementById('submitBtn');
        const modeBtns = document.querySelectorAll('.mode-btn');
        const outputSection = document.getElementById('outputSection');
        const outputContent = document.getElementById('outputContent');
        const suggestions = document.getElementById('suggestions');
        const suggestionCards = document.querySelectorAll('.suggestion-card');

        let currentMode = 'video';

        // Auto-resize textarea
        input.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 200) + 'px';
        });

        // Mode switching
        modeBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                modeBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                currentMode = this.dataset.mode;
                
                if (currentMode === 'video') {
                    input.placeholder = 'Paste a video URL or describe your quiz requirements...';
                } else {
                    input.placeholder = 'Describe your quiz (e.g., "10 questions on photosynthesis")...';
                }
            });
        });

        // Suggestion cards
        suggestionCards.forEach(card => {
            card.addEventListener('click', function() {
                input.value = this.dataset.prompt;
                input.focus();
                suggestions.style.display = 'none';
            });
        });

        // Submit functionality
        submitBtn.addEventListener('click', generate);
        input.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                generate();
            }
        });

        function generate() {
            if (!input.value.trim()) return;
            
            suggestions.style.display = 'none';
            outputSection.classList.add('active');
            outputContent.textContent = 'Generating...';
            
            // Placeholder for actual generation
            setTimeout(() => {
                outputContent.textContent = `Generated ${currentMode} content for: ${input.value}`;
            }, 1000);
        }
    </script>

    <style>
        body {
            background-color: #000000;
            color: white;
            font-family: 'Roboto', sans-serif;
        }

        /* Keep the header untouched */
        /* main content centered */
        .main-content {
            display: flex;
            flex-direction: column;
            align-items: center; /* horizontal center */
            text-align: center;
            margin-top: 40px; /* space below header */
        }

        #greeting {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(to right, #2da8d2, #d93b55);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            margin-bottom: 8px;
        }

        .subtitle {
            color: #888;
            font-size: 1rem;
            font-weight: 400;
            margin-bottom: 24px;
        }

        /* Center input container */
        .input-container {
            width: 100%;
            max-width: 800px;
            display: flex;
            justify-content: center;
            margin-bottom: 24px;
        }

        .input-wrapper {
            background: #1a1a1a;
            border: 1px solid #2a2a2a;
            border-radius: 28px;
            padding: 6px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);
            width: 100%;
        }

        .input-wrapper:focus-within {
            border-color: #2da8d2;
            box-shadow: 0 4px 32px rgba(45, 168, 210, 0.15);
        }

        .main-input {
            width: 100%;
            background: transparent;
            border: none;
            outline: none;
            color: #e8e8e8;
            font-size: 1.05rem;
            padding: 16px 24px;
            font-family: inherit;
            resize: none;
            min-height: 56px;
            max-height: 200px;
        }

        .main-input::placeholder {
            color: #666;
        }

        .input-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 16px 8px;
        }

        .mode-selector {
            display: flex;
            gap: 8px;
        }

        .mode-btn {
            background: #252525;
            border: 1px solid #333;
            color: #888;
            padding: 6px 14px;
            border-radius: 16px;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s ease;
            font-weight: 500;
        }

        .mode-btn:hover {
            background: #2d2d2d;
            color: #aaa;
        }

        .mode-btn.active {
            background: #2da8d2;
            border-color: #2da8d2;
            color: #fff;
        }

        .submit-btn {
            background: #2da8d2;
            border: none;
            color: #fff;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 1.2rem;
        }

        .submit-btn:hover {
            background: #2190b0;
            transform: scale(1.05);
        }

        .submit-btn:active {
            transform: scale(0.95);
        }

        .output-section {
            width: 100%;
            max-width: 800px;
            margin-top: 40px;
            display: none;
        }

        .output-section.active {
            display: block;
        }

        .output-content {
            background: #141414;
            border: 1px solid #252525;
            border-radius: 16px;
            padding: 28px;
            min-height: 200px;
            color: #e8e8e8;
            line-height: 1.7;
            font-size: 1rem;
            white-space: pre-wrap;
        }

        .output-content:focus {
            outline: none;
            border-color: #2da8d2;
        }

        .output-content:empty:before {
            content: 'Generated content will appear here...';
            color: #555;
        }

        .suggestions {
            display: flex;
            justify-content: center;
            gap: 12px;
            width: 100%;
            max-width: 800px;
            margin-top: 24px;
        }

        .suggestion-card {
            background: #1a1a1a;
            border: 1px solid #2a2a2a;
            border-radius: 16px;
            padding: 18px;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .suggestion-card:hover {
            background: #202020;
            border-color: #333;
            transform: translateY(-2px);
        }

        .suggestion-title {
            font-weight: 500;
            margin-bottom: 6px;
            color: #e8e8e8;
            font-size: 0.95rem;
        }

        .suggestion-desc {
            font-size: 0.85rem;
            color: #888;
            line-height: 1.4;
        }

        @media (max-width: 768px) {
            .suggestions {
                flex-direction: column;
            }
            
            .mode-selector {
                flex-wrap: wrap;
            }
        }
    </style>
</body>
</html>